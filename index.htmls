<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EverTrust Online Banking</title>
  <style>
    * {
      box-sizing: border-box;
    }
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
      background: #f3f4f6;
    }

    .page-wrapper {
      min-height: 100vh;
      width: 100%;
      display: flex;
      align-items: stretch;
      justify-content: center;
    }

    .card {
      background: #ffffff;
      border-radius: 0;
      box-shadow: none;
      padding: 20px 24px;
      width: 100%;
      max-width: 100%;
      min-height: 100vh;
    }

    h1, h2, h3 {
      margin-top: 0;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: -20px -24px 20px -24px;
      padding: 14px 20px;
      background: #b91c1c; /* red band at the top */
      color: #ffffff;
    }

    .top-bar-title {
      font-weight: bold;
      font-size: 20px;
    }

    .btn {
      padding: 8px 16px;
      background: #2563eb;
      color: #ffffff;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
    }
    .btn.secondary {
      background: #6b7280;
    }
    .btn.red {
      background: #b91c1c;
    }
    .btn:disabled {
      opacity: 0.6;
      cursor: default;
    }

    .field {
      margin-bottom: 14px;
    }
    .field label {
      display: block;
      font-size: 14px;
      margin-bottom: 4px;
    }
    .field input {
      width: 100%;
      padding: 8px 10px;
      border-radius: 6px;
      border: 1px solid #d1d5db;
      font-size: 14px;
    }

    .error {
      color: #b91c1c;
      font-size: 13px;
      margin-bottom: 8px;
    }

    .two-columns {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
      margin-top: 10px;
    }

    .balance-box {
      padding: 10px 12px;
      border-radius: 8px;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
    }
    .balance-label {
      font-size: 13px;
      color: #6b7280;
    }
    .balance-amount {
      font-size: 22px;
      font-weight: bold;
      margin-top: 4px;
    }

    .section-title {
      font-weight: bold;
      margin-top: 18px;
      margin-bottom: 8px;
      font-size: 15px;
    }

    .actions-row,
    .settings-row {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-bottom: 8px;
    }

    .tx-row {
      display: flex;
      justify-content: space-between;
      padding: 6px 0;
      border-bottom: 1px solid #e5e7eb;
      font-size: 14px;
    }
    .tx-row:last-child {
      border-bottom: none;
    }
    .tx-amount-credit {
      color: #16a34a;
      font-weight: bold;
    }
    .tx-amount-debit {
      color: #b91c1c;
      font-weight: bold;
    }

    .info-box {
      padding: 10px 12px;
      border-radius: 8px;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      font-size: 14px;
      line-height: 1.5;
    }

    .small-text {
      font-size: 12px;
      color: #6b7280;
      margin-top: 4px;
    }

    @media (max-width: 640px) {
      .two-columns {
        grid-template-columns: 1fr;
      }
      .top-bar {
        flex-direction: column;
        align-items: flex-start;
        gap: 6px;
      }
    }
  </style>
</head>
<body>
  <!-- LOGIN PAGE -->
  <div id="loginPage" class="page-wrapper">
    <div class="card">
      <div class="top-bar">
        <div class="top-bar-title">EverTrust Online Banking</div>
      </div>
      <h2>Sign in</h2>
      <p>Please use your assigned credentials to access your account.</p>

      <div id="loginError" class="error" style="display:none;"></div>

      <div class="field">
        <label for="usernameInput">Username</label>
        <input id="usernameInput" type="text" placeholder="Enter your username" />
      </div>
      <div class="field">
        <label for="passwordInput">Password</label>
        <input id="passwordInput" type="password" placeholder="Enter your password" />
      </div>

      <button class="btn" onclick="handleLogin()">Log In</button>
    </div>
  </div>

  <!-- DASHBOARD PAGE -->
  <div id="dashboardPage" class="page-wrapper" style="display:none;">
    <div class="card">
      <div class="top-bar">
        <div>
          <div class="top-bar-title">EverTrust Credit Union</div>
          <div style="font-size:13px;">Secure Online Banking</div>
        </div>
        <button class="btn secondary" onclick="logout()">Log out</button>
      </div>

      <h2>Welcome, <span id="welcomeName">Christy Earley</span></h2>

      <div class="two-columns">
        <!-- Balances -->
        <div>
          <div class="section-title">Balances</div>
          <div class="balance-box">
            <div class="balance-label">Checking •0857</div>
            <div class="balance-amount" id="checkingBalance">$4,300,790.00</div>
          </div>
          <div class="balance-box" style="margin-top:10px;">
            <div class="balance-label">Savings •4392</div>
            <div class="balance-amount" id="savingsBalance">$120,450.25</div>
          </div>

          <div class="section-title">Quick actions</div>
          <div class="actions-row">
            <button class="btn" onclick="showRestriction()">Send Money</button>
            <button class="btn" onclick="showRestriction()">Deposit Money</button>
            <button class="btn" onclick="showRestriction()">View Full History</button>
          </div>
          <p class="small-text">
            For your security, your account has been temporarily restricted. Please resolve the outstanding tax balance to continue using our services.
          </p>
        </div>

        <!-- Account info + settings -->
        <div>
          <div class="section-title">Account information</div>
          <div class="info-box">
            <strong>Name:</strong> Christy Earley<br />
            <strong>Email:</strong> <span id="email">christyearley588@gmail.com</span><br />
            <strong>Phone:</strong> <span id="phone">571 229-3743</span><br />
            <strong>Address:</strong><br />
            1589 Old Monrovia Rd NW #122<br />
            Huntsville, AL 35806
          </div>

          <div class="section-title">Card &amp; security</div>
          <div class="settings-row">
            <button class="btn red" onclick="lockCard()">Lock card</button>
            <button class="btn secondary" onclick="changePassword()">Change password</button>
            <button class="btn secondary" onclick="showAbout()">About bank</button>
          </div>
        </div>
      </div>

      <div class="section-title">Recent transaction history</div>
      <div>
        <!-- 2025 (this year) from July onwards -->
        <div class="tx-row">
          <span>Debit – 2025-11-12</span>
          <span class="tx-amount-debit">−245.90</span>
        </div>
        <div class="tx-row">
          <span>Payroll Deposit – 2025-11-01</span>
          <span class="tx-amount-credit">+18,500.00</span>
        </div>
        <div class="tx-row">
          <span>Online Transfer – 2025-10-18</span>
          <span class="tx-amount-debit">−3,200.00</span>
        </div>
        <div class="tx-row">
          <span>Incoming Wire – 2025-09-30</span>
          <span class="tx-amount-credit">+75,000.00</span>
        </div>
        <div class="tx-row">
          <span>Withdrawal – 2025-08-22</span>
          <span class="tx-amount-debit">−500.00</span>
        </div>
        <div class="tx-row">
          <span>Payroll Deposit – 2025-08-01</span>
          <span class="tx-amount-credit">+18,500.00</span>
        </div>
        <div class="tx-row">
          <span>Online Bill Pay – 2025-07-14</span>
          <span class="tx-amount-debit">−1,250.75</span>
        </div>
        <div class="tx-row">
          <span>Payroll Deposit – 2025-07-01</span>
          <span class="tx-amount-credit">+18,500.00</span>
        </div>

        <!-- 2024 -->
        <div class="tx-row">
          <span>Incoming Wire – 2024-12-19</span>
          <span class="tx-amount-credit">+60,000.00</span>
        </div>
        <div class="tx-row">
          <span>Payroll Deposit – 2024-11-01</span>
          <span class="tx-amount-credit">+18,500.00</span>
        </div>

        <p class="small-text">
          
        </p>
      </div>
    </div>
  </div>

  <script>
    // LOGIN HANDLER
    function handleLogin() {
      var username = document.getElementById("usernameInput").value.trim();
      var password = document.getElementById("passwordInput").value.trim();
      var errorBox = document.getElementById("loginError");

      // Hardcoded credentials (username: Therrien1122, password: CarieTherrien$!)
      if (username === "Therrien1122" && password === "CarieTherrien$!") {
        errorBox.style.display = "none";
        document.getElementById("loginPage").style.display = "none";
        document.getElementById("dashboardPage").style.display = "flex";
        document.getElementById("welcomeName").textContent = "Richard Wahl"; // username on dashboard
      } else {
        errorBox.textContent = "Invalid username or password.";
        errorBox.style.display = "block";
      }
    }

    function logout() {
      document.getElementById("usernameInput").value = "";
      document.getElementById("passwordInput").value = "";
      document.getElementById("loginError").style.display = "none";

      document.getElementById("dashboardPage").style.display = "none";
      document.getElementById("loginPage").style.display = "flex";
    }

    // RESTRICTION & SETTINGS ACTIONS
    function showRestriction() {
      alert(
        "For your security, your account has been temporarily restricted. Please resolve the outstanding tax balance to continue using our services."
      );
    }

    function lockCard() {
      alert(
        "Card lock is not available online. Please contact customer service to manage your card status."
      );
    }

    function changePassword() {
      alert(
        "Online password change is currently disabled. Please contact customer service to verify your identity."
      );
    }

    function showAbout() {
      alert(
        "EverTrust Credit Union provides checking, savings, and online banking services."
      );
    }
  </script>
</body>
</html>
